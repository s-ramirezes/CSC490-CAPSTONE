<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/feed.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/message.css">
    <script src="/public/script.js" defer></script>
    <title>Messages</title>
</head>

<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <div class="search">
    <nav class="navbar bg-body-tertiary search">
        <div class="container-fluid">
          <form class="d-flex" role="search" action="/searchUser" method="POST">
            <input class="form-control me-2" name="user" type="text" placeholder="Search up user" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </div>
    <h1>Users</h1>
    <div>
        <% users.forEach(user=> { %>
            <div class="user-card">
                <div>
                    <h2>
                        <%= user.fname %>
                            <%= user.lname %>
                                <%= user.email %>
                    </h2>
                    <div class="role-box 
    <% if (user.role === 'teacher') { %>
        teacher-role
    <% } else if (user.role === 'moderator') { %>
        mod-role
    <% } else if (user.role === 'tutor') { %>
        tutor-role
    <% } else { %>
        student-role
    <% } %>
">
                        <h2>
                            <%= user.role %>
                        </h2>
                    </div>
                    <form action="/createConv" method="POST" class="ms-4">
                        <input type="hidden" id="userId2" value="<%= user.userId %>" name="userId2">
                        <button type="submit" class="btn btn-link p-0 border-0 me-2">Message</button>
                    </form>
                </div>
            </div>
            <% }); %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>