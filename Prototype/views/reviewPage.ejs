<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../public/review.css">
    <title>Review Page</title>
</head>

<body>
    <div class="review">
        <div class="header">
            <h1>Write a review!</h1>
        </div>
        <div class="content">
            <form action="/makeReview" method="POST" onsubmit="return validateCourseId(event)">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <div>
                    <label for="subject" class="form-label">Subject</label>
                    <select id="subject" name="subject" class="form-select" required>
                        <option value="" selected disabled>Select a subject</option>
                        <% subjects.forEach(subject => { %>
                            <option value="<%= subject.catName %>"><%= subject.catName %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label for="courseId" class="form-label">Course ID</label>
                    <input type="number" class="form-control" id="courseId" name="courseId" min="100" max="999" required />
                </div>
                <input type="hidden" name="revieweeId" value="<%= revieweeId %>">
                <input type="hidden" name="convId" value="<%= convId %>">
                <div><label for="description">Write a description of experience:</label></div>
                <textarea id="review" name="description" rows="4" required></textarea>
                <div>
                    <div><label for="rating">Rate the experience (1-10): </label></div>
                    <input type="range" id="rating" name="rating" min="1" max="10" oninput="this.nextElementSibling.value = this.value" required>
                    <output>6</output>
                </div>
                <div>
                    <label>Would you recommend this tutor?:</label><br>
                    <input type="radio" id="recommend1" name="recommended" value="Yes" required>
                    <label for="recommend1">Yes</label>
        
                    <input type="radio" id="recommend2" name="recommended" value="No" required>
                    <label for="recommend2">No</label>
                </div>
                <div>
                    <button class="btn btn-secondary" onclick="history.back()">Back</button>
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>

        </div>
        <div class="footer">
            <h1>Thank You!</h1>
        </div>
    </div>

</body>

</html>