<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/public/feed.css">
    <link rel="stylesheet" href="/public/home.css">
    <title>Home</title>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <div class="columns">
        <div class="pageContent">
            <h1>Spartan Aid</h1>
            <p>
                Welcome to Spartan Aid. <br>
                Please pick a subject you need help with.
            </p>
        </div>

        <div id="private-messages">
            <h1>Private Messages</h1>
            <% if (convUsers) { %>
            <ul class="users">
                <% convUsers.forEach(user => { %>
                    <li class="user-info">
                        <a href="/account/<%= user.otherUser.userId %>">
                            <img src="/images/blank-pf.png" class="rounded-circle" alt="profile" size="50" height="50"
                                width="50">
                            <span><%= user.otherUser.fname + " " + user.otherUser.lname %></span>
                        </a>
                        <span> <%= user.unreadCount %> unread messages</span>
                        <button type="button" class="btn btn-primary">Message</button>
                    </li>
                    <br>
                <% }) %> 
            </ul>
            <% } %>
        </div>
    </div>

</body>


</html>