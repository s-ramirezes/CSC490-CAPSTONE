<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/modUsers.css">
    <title>Home</title>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <div class="pageContent">
        <div class="userName">
            <h1> <%=user.fname%> <%=user.lname %></h1>
            <% if (user.role == 'tutor'){ %>
                <form action="/removeTutor?userId=<%= user.userId %>" method="POST">
                    <button class="flagUser">
                        Remove Tutor</button>
                </form>
            <% } else { %>
                <form action="/addTutor?userId=<%= user.userId %>" method="POST">
                    <button class="flagUser">
                        Add Tutor</button>
                </form>
            <% } %>
        </div>
        
        <h1>Posts</h1>
        <div class="flaggedUserList">
            <% if (!userPosts || userPosts.length===0) { %>
                <div class="flaggedUser">
                    <p>There are no posts.</p>
                </div>
            <% } else { %>
                <% userPosts.forEach(post => { %>
                    <div class="flaggedUser">
                        <p>Title= <%=post.title %></p>
                        <p>Description= <%=post.description %> </p>
                    </div>
                    
                <% }) %>
            <% } %>
        </div>
        <h1>Replies</h1>
        <div class="flaggedUserList">
            <% if (!userReplies || userReplies.length===0) { %>
                <div class="flaggedUser">
                    <p>There are no replies.</p>
                </div>
            <% } else { %>
                <% userReplies.forEach(reply => { %>
                    <div class="flaggedUser">
                        <p>Description= <%=reply.description %></p>
                        <p>replyTime= <%=reply.replyTime %> </p>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

</body>


</html>