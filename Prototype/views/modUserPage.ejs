<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/modUsers.css">
    <link rel="stylesheet" href="/public/home.css">
    <title>Home</title>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <div class="modPageContent">
        <div class="userName">
            <h1> <%=user.fname%> <%=user.lname %></h1>
            <% if (user.flagged == 1){ %>
                <form action="/unflagUser?userId=<%= user.userId %>" method="POST">
                    <button class="flagUser">
                        Unflag</button>
                </form>
            <% } else { %>
                <form action="/modFlag?userId=<%= user.userId %>" method="POST">
                    <button class="flagUser">
                        Flag</button>
                </form>
            <% } %>
        </div>
        
        <h1>Posts</h1>
        <div class="flaggedUserList">
            <% if (!userPosts || userPosts.length===0) { %>
                <div class="flaggedUser">
                    <p>There are no posts.</p>
                </div>
            <% } else { %>
                <table>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                    <% userPosts.forEach(post => { %>
                        <tr>
                            <td><%=post.title %></td>
                            <td><%=post.description %></td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
        </div>
        <h1>Replies</h1>
        <div class="flaggedUserList">
            <% if (!userReplies || userReplies.length===0) { %>
                <div class="flaggedUser">
                    <p>There are no replies.</p>
                </div>
            <% } else { %>
                <table>
                    <tr>
                        <th>Description</th>
                        <th>replyTime</th>
                    </tr>
                    <% userReplies.forEach(reply => { %>
                        <tr>
                            <td><%=reply.description %></td>
                            <td><%=reply.replyTime %></td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
        </div>
    </div>

</body>


</html>