<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/modUsers.css">
    <title>Home</title>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <ul class="DMs">
        <h2>Messages</h2>
        <li class="notifications">
            <img src="/images/blank-pf.png" alt="profile-pic">
            <a href="#">UserName</a>
            <p> # of new notifications</p>

        </li>
        <li class="notifications">
            <img src="/images/blank-pf.png" alt="profile-pic">
            <a href="#">UserName</a>
            <p> # of new notifications</p>

        </li>
        <li class="notifications">
            <img src="/images/blank-pf.png" alt="profile-pic">
            <a href="#">UserName</a>
            <p> # of new notifications</p>

        </li>
    </ul>
    <div class="pageContent">
        <h1>Flagged Users</h1>
        <div class="flaggedUserList">
            <% flaggedUsers.forEach(flaggedUser => { %>
                <a class="flaggedUser" href="/modUserPage?userId=<%= flaggedUser.userId %>">
                    <p>UserId= <%=flaggedUser.userId %></p>
                    <p>Name= <%=flaggedUser.fname %> <%=flaggedUser.lname %></p>
                    <p>Role= <%=flaggedUser.role %></p>
                    <form action="/unflagUser?userId=<%= flaggedUser.userId %>" method="POST">
                        <button class="flagUser">
                            Unflag</button>
                    </form>
                    <form action="/banUser?userId=<%= flaggedUser.userId %>" method="POST">
                        <button class="flagUser">
                            Ban</button>
                    </form>
                </a>
            <% }) %>
            
        </div>
        <h1>All Users</h1>
        <div class="allUserList">
            <% allUsers.forEach(user => { %>
                <a class="user" href="/modUserPage?userId=<%= user.userId %>">
                    <p>UserId= <%=user.userId %></p>
                    <p>Name= <%=user.fname %> <%=user.lname %></p>
                    <p>Role= <%=user.role %></p>
                    <form action="/modFlag?userId=<%= user.userId %>" method="POST">
                        <button class="flagUser">
                            Flag</button>
                    </form>
                </a>
            <% }) %>
            
        </div>
    </div>

</body>


</html>