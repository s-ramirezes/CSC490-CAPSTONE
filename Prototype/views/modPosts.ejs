<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/modUsers.css">
    <title>Home</title>
</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>
    <div class="pageContent">
        <h1>Flagged Posts</h1>
        <div class="flaggedUserList">
            <% if (!flaggedPosts || flaggedPosts.length===0) { %>
                <p>There are no flagged posts.</p>
            <% } else { %>
                <% flaggedPosts.forEach(flaggedPost => { %>
                    <div class="flaggedUser">
                        <p>PostId= <%=flaggedPost.postId %></p>
                        <p>UserId= <%=flaggedPost.userId %></p>
                        <p>Title= <%=flaggedPost.title %></p>
                        <p>Description= <%=flaggedPost.description %></p>
                        <form action="/unflagPost?postId=<%= flaggedPost.postId %>" method="POST">
                            <button class="flagUser">
                                Unflag Post</button>
                        </form>
                        <form action="/modFlag?userId=<%= flaggedPost.userId %>" method="POST">
                            <button class="flagUser">
                                Flag User</button>
                        </form>
                        <form action="/deletePost?postId=<%= flaggedPost.postId %>" method="POST">
                            <button class="flagUser">
                                Delete</button>
                        </form>
                    </div>
                <% }) %>
            <%} %> 
        </div>
        <h1>All Posts</h1>
        <div class="allUserList">
            <% if (!allPosts || allPosts.length===0) { %>
                <p>There are no posts.</p>
            <% } else { %>
                <% allPosts.forEach(post => { %>
                    <div class="flaggedUser">
                        <p>PostId= <%=post.postId %></p>
                        <p>UserId= <%=post.userId %></p>
                        <p>Title= <%=post.title %></p>
                        <p>Description= <%=post.description %></p>
                        <form action="/modFlag?userId=<%= post.userId %>" method="POST">
                            <button class="flagUser">
                                Flag User</button>
                        </form>
                        <form action="/deletePost?postId=<%= post.postId %>" method="POST">
                            <button class="flagUser">
                                Delete</button>
                        </form>
                    </div>
                <% }) %>
            <%} %> 
        </div>
    </div>

</body>


</html>